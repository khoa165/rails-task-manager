<div class="container">
  <div class="header">
    <h1><%= @task.title %></h1>
    <%= link_to "Edit task", task_edit_path, class: "btn-elegant" %>
  </div>
  <div class="details">
    <p><%= @task.details %></p>
  </div>
  <div class="completed-status">
    <% if @task.completed %>
      <input type="checkbox" checked>
      This task is completed.
    <% else %>
      <input type="checkbox">
      This task is not completed yet.
    <% end %>
  </div>
  <%= link_to "Return to list", tasks_path, class: "btn-elegant" %>
</div>
